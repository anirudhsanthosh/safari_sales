<?xml version='1.0' encoding='utf-8'?>
<widget id="com.entertext.safari.app" version="1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>safari sales</name>
    <description>
        Sales report and attendance application for safari.
    </description>
    <author email="anirudhsanthosh@gmail.com" href="http://bestwishess.online">
        Anirudh santhosh
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="mdpi" src="res/mipmap-mdpi/safari.png" />
    <icon density="hdpi" src="res/mipmap-hdpi/safari.png" />
    <icon density="xhdpi" src="res/mipmap-hdpi/safari.png" />
    <icon density="xxhdpi" src="res/mipmap-xxhdpi/safari.png" />
    <icon density="xxxhdpi" src="res/mipmap-xxxhdpi/safari.png" />
    <splash density="land-hdpi" src="res/screen/android/screen.png" />
    <splash density="land-ldpi" src="res/screen/android/screen.png" />
    <splash density="land-mdpi" src="res/screen/android/screen.png" />
    <splash density="land-xhdpi" src="res/screen/android/screen.png" />
    <splash density="port-hdpi" src="res/screen/android/screen.png" />
    <splash density="port-ldpi" src="res/screen/android/screen.png" />
    <splash density="port-mdpi" src="res/screen/android/screen.png" />
    <splash density="port-xhdpi" src="res/screen/android/screen.png" />
    <allow-intent href="market:*" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
    </edit-config>
    <config-file parent="/*" target="AndroidManifest.xml">
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permissions.NETWORK_ACCESS" />
        <uses-permission android:name="android.permissions.ACCESS_NETWORK_STATE" />
    </config-file>
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="750" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenSpinnerColor" value="#ffffff" />
</widget>
